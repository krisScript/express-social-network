<%- include('../includes/head.ejs') %>
    </head>
  
  <body>
     <%- include('../includes/nav.ejs') %>
     <section class="hero is-small is-primary is-bold">
        <div class="hero-body">
          <div class="container">
              <% if (profilePicture) { %>    
                <figure class="rounded-img-container">
                    <img class="rounded-img" src="<%= profilePicture %>">
                  </figure>
                <% }  else { %>
                  <span class="icon  is-large">
                      <i class="fas fa-user-circle"></i>
                    </span>
                  <% } %>
               
          
              <h1 class="title" id="user-fullName">
                  <%= firstName %> <%= lastName %>
                </h1>
                <h2 class="subtitle" id="user-email">
                    <%= email %>
                  </h2>
          </div>
        </div>
        <div class="hero-foot">
            <div class="tabs is-centered has-background-link">
                <ul>
                  <li class="is-active"><a href="/my-page">My Page</a></li>
                  <li><a href="/user-images">Images</a></li>
                  <li><a href="/user-friends">Friends</a></li>
                </ul>
              </div>
        </div>
      </section>
   <section class="section columns">
     <div class="column is-half">
      <div class="columns is-multiline">
        <div class="box column is-8">
          <form  method="POST" enctype="multipart/form-data" id="form-profile-picture" action="/my-page">
            <% if (errorMessage) { %>
              <div class="notification is-danger">
                <p><%= errorMessage %></p>
              </div>
            <% }  %>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <div class="field ">
                  <div class="file has-name is-primary">
                      <label class="file-label">
                        <input class="file-input" type="file" name="image" required>
                        <span class="file-cta">
                          <span class="file-icon">
                            <i class="fas fa-upload"></i>
                          </span>
                          <span class="file-label">
                            Choose a fileâ€¦
                          </span>
                        </span>
                        <span class="file-name">
                         Change your profile picture
                        </span>
                      </label>
                    </div>
                </div>
                <div class="field">
                    <div class="control ">
                        <button  class="button is-primary">Change</button>
                      </div>
                </div>
          </form>
        </div>
      </div>
     </div>
<div class="column is-half">
  <div class="columns is-multiline">
      <div class="box column is-full">
          <form id="post-form">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <div class="field">
                  <label class="label">Title</label>
                  <div class="control">
                    <input class="input" type="text" placeholder="Text input" 
                    required name="title">
                  </div>
                </div>
      
                <div class="field">
                  <label class="label">Post</label>
                  <div class="control">
                    <textarea class="textarea" placeholder="Textarea" required name="postContent"></textarea>
                  </div>
                </div>
  
                <div class="field">
                  <div class="control">
                    <label class="radio">
                      <input type="radio" name="question">
                      Yes
                    </label>
                    <label class="radio">
                      <input type="radio" name="question">
                      No
                    </label>
                  </div>
                </div>
                
                <div class="field is-grouped">
                  <div class="control">
                    <button class="button is-link">Submit</button>
                  </div>
                  <div class="control">
                    <button class="button is-text">Cancel</button>
                  </div>
                </div>
            </div>
          </form> 
  </div>

  <div class="column is-full columns is-multiline is-centered" id="posts-container">
      <% for (let post of posts) { %>
   
            <div class="box  column is-full" id="post-<%= post._id %>">
                <article class="media" >
                    <figure class="media-left">
                      <p class="image is-64x64">
                        <img src="https://bulma.io/images/placeholders/128x128.png">
                      </p>
                    </figure>
                    <div class="media-content">
                      <div class="content">
                        <p>
                          <strong> <%= firstName %>  <%= lastName %></strong> <small> <%= email %></small>
                          <br>
                          <strong><%= post.title %></strong>
                          <br>
                          <p> <%= post.postContent %></p>
                        </p>
                      </div>
                      <nav class="level is-mobile">
                        <div class="level-left">
                            <a href="#" class="level-item">Save</a>
                            <button  data-postId='<%= post._id %>' class="level-item edit-btn">Edit</button>
                            <button data-postId='<%= post._id %>' class="level-item delete-btn">Delete</button>
                        </div>
                      </nav>
                    </div>
                  </article>
            </div>
            
   
        
    
        <% }  %> 
  </div>
  </div>
  
  
    </div>  
     </div>      
   </section>
  

   

    <%- include('../includes/end.ejs') %>